    "pages_recommend/recommend_detail/cgp_recommend_detail": {
      "network": "all",
      "packages": [
        "__APP__"
      ]
    },
    "pages_recommend/recommend_search/cgp_recommend_search": {
      "network": "all",
      "packages": [
        "__APP__"
      ]
