{
  "pages": [
    "pages/recommend/cgp_recommend",
    "pages/articles/cgp_articles"
  ],
  "subPackages": [
    {
      "root": "pages_articles",
      "pages": [
        "articles_detail/cgp_articles_detail"
      ]
    },
    {
      "root": "pages_recommend",
      "pages": [
        "recommend_detail/cgp_recommend_detail",
        "recommend_search/cgp_recommend_search"
      ]
    }
