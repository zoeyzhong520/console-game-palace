@charset "utf-8";
.container {
	height: 200vh;
	position: relative;
}
.list-cell {
	display: flex;
	align-items: center;
	position: relative;
	box-sizing: border-box;
	margin-left: 30rpx;
	margin-right: 30rpx;
	padding: 30rpx 0;
	border-bottom: 1rpx solid #EBEBEB;
}
.list-cell-image {
	width: 220rpx;
	height: 140rpx;
	border-radius: 8rpx;
	background-color: #ccc;
}
.list-cell-title {
	margin-left: 30rpx;
	color: #333333;
	font-weight: bold;
	font-size: 30rpx;
	line-height: 42rpx;
	width: 440rpx;
	
	/* 限制两行 */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	/* 多行在这里修改数字即可 */
	-webkit-line-clamp: 2; 
	overflow:hidden;
	/* autoprefixer: ignore next */
	-webkit-box-orient: vertical;
}
.list-cell-description {
	margin-left: 30rpx;
	color: #999999;
	font-size: 24rpx;
	line-height: 33rpx;
	width: 440rpx;
	margin-top: 10rpx;
	
	/* 限制两行 */
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	/* 多行在这里修改数字即可 */
	-webkit-line-clamp: 2; 
	overflow:hidden;
	/* autoprefixer: ignore next */
	-webkit-box-orient: vertical;
}
.list-cell-check-detail {
	margin-left: 30rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border: 2rpx solid #2979ff;
	border-radius: 4rpx;
	padding: 0 10rpx;
	position: absolute;
	bottom: 0;
	
	color: #2979ff;
	font-size: 30rpx;
	line-height: 42rpx;
	text-align: center;
}

/* 新上架标识 */
.list-cell-new-tag {
	padding: 0 10rpx;
	position: absolute;
	top: 30%;
	left: 0;
	-webkit-transform: translateY(-30%);
	        transform: translateY(-30%);
	
	/* color: #fa3534; */
	color: #fff;
	font-size: 30rpx;
	line-height: 42rpx;
	font-weight: bold;
	text-align: center;
	text-shadow: 0 0 1rpx #EBEBEB;
	background: rgba(0,0,0,.6);	
	border-bottom-right-radius: 40rpx;
	border-top-right-radius: 40rpx;
}

/* 导航栏-搜索框 */
.slot-wrap {
	display: flex;
	align-items: center;	
	/* 如果您想让slot内容占满整个导航栏的宽度 */
	flex: 1;
	/* 如果您想让slot内容与导航栏左右有空隙 */
	padding: 20rpx;
}
.sticky {
	width: 750rpx;
	height: 80rpx;
	color: #fff;
	position: fixed;
	z-index: 1;
}

